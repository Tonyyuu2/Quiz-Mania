<!DOCTYPE html>
<html lang="en">
  <head>
    <title>QuizMania -My History</title>
    <link rel="stylesheet" href="/styles/my_attempts.css" type="text/css" />
  </head>

  <body>
    <%- include('partials/_header') %>
    <div class="history flex-column nav-margin">
      <% let index = 1%> <% for(const result of results) { %>
      <div class="history_container flex-row">
        <h1 class="order">#<%= index %></h1>
        <div class="quiz_info flex-row">
          <div class="quiz_title">
            <i class="fa-solid fa-book"></i>
            <a href="/quizzes/u/<%= result.url %> "><%= result.title %></a>
          </div>
          <div class="quiz_score">
            <i class="fa-solid fa-award"></i> <%= result.user_score %> / <%=
            result.total_score %>
          </div>

          <div class="quiz_time">
            <i class="fa-solid fa-calendar-days"></i><%= result.date %>
          </div>
        </div>
      </div>
      <% index++%> <% }%>
    </div>
    <%- include('partials/_footer') %>
  </body>
</html>
