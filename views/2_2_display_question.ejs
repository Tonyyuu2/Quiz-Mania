        <div class="options">
          <input
            type="radio"
            id="margotDisney"
            name="quesOne"
            value="margotDisney"
          />
          <lable for="margotDisney"><%= option_1 %></lable>
        </div>
        <div class="options">
          <input
            type="radio"
            id="waltDisney"
            name="quesOne"
            value="waltDisney"
          />
          <lable for="waltDisney"><%= option_2 %></lable>
        </div>
        <div class="options">
          <input type="radio" id="royDisney" name="quesOne" value="royDisney" />
          <lable for="royDisney"><%= option_3 %></lable>
        </div>
        <div class="options">
          <input
            type="radio"
            id="maddoxDisney"
            name="quesOne"
            value="maddoxDisney"
          />
          <lable for="maddoxDisney"><%= option_4 %></lable>
        </div>
      </div>
      <div class="ques_btn flex-row">
        <a class="primary-btn" href="/">Previous</a>
        <a class="primary-btn" href="/">Next</a>
      </div>
    </div>
    <%- include('partials/_footer') %>
  </body>
</html>
